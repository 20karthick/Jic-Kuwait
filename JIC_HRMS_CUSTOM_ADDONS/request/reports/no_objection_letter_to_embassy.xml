<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_no_objection_letter_request">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size:15px;">
                    <h2 class='text-center'><span>No Objection Letter To Embassy</span></h2>
                </div>
               <table style="width:100%;border-top:hidden;border-left:hidden;border-right:hidden;border-bottom:hidden">
                    <tr>
                        <td style="width:50%;border-right:hidden;"></td>
                        <td style="width:50%;text-align:right;padding-right:15px;"><b>Date: </b><span t-field='o.nol_form_date'/></td>
                    </tr>
                </table>
                <br/>
                <div style="width:100%; text-align:left;font-weight:bold;">
                    <p>
                        <b>To,</b>
                    </p>
                </div>
                <div>
                    <span>The Visa Officer</span>,
                    <span style="display: block;">The Embassy of<span t-field='o.nol_the_embassy_of'/>,</span>
                    <span style="display: block;"><span t-field='o.nol_nationality_id'/>.</span>
                </div>
                <br/>
                <div>
                    <p><b>Sub: </b>No Objection Letter To Embassy <span t-field='o.nol_applicant_name'/></p>
                </div>
                 <div>
                    <p><b>Dear Concerned,</b></p>
                </div>
                 <div>
                    <p>
                       The Letter is to confirm that <b><span t-field='o.nol_applicant_name'/> <span t-field='o.nol_nationality_id'/></b> of <b><span t-field='o.nol_passport_number'/></b> is
                        <b><span t-field='o.nol_emp_part'/></b> with <b><span t-field='o.nol_company_name'/></b>with <b><span t-field='o.nol_designation'/></b>
                        since<b><span t-field='o.nol_since'/></b> on a full-time basis with a <b><span t-field='o.nol_salary_amount'/></b>.
                    </p>
                     <p>
                       I would like to endorse the fact that I have no objection for his/ her travel to <b><span t-field='o.nol_designation'/></b> for travel purpose
                         from start dated <b><span t-field='o.nol_start_date'/></b> to end date <b><span t-field='o.nol_end_date'/></b> and he/she shall resume after the tour.
                         I also validate the fact that all his/her travelling and living expenses shall be borne by him.
                    </p>
                </div>
                <div>
                    <p>
                        Please feel free to contact us if your office should require any further information.
                    </p>
                </div>
                <br/>
                <br/>
                <br/>
                <table style="width:100%;border-top:hidden;border-left:hidden;border-right:hidden;border-bottom:hidden;">
                    <tr>
                        <td style="width:20%; text-align:left;border-left:hidden;font-weight:bold;">Sincerely,</td>
                        <td style="width:60%; text-align:right;border-left:hidden;"></td>
                        <td style="width:20%; text-align:center;border-left:hidden; background-color:#ededed;font-weight:bold;">APPROVED BY</td>
                    </tr>
                </table>
                <t t-foreach="o.approver" t-as="stage">
                    <table style="width:100%;text-align:right;border-top:hidden;border-left:hidden;border-right:hidden;border-bottom:hidden;">
                        <tr>
                            <td style="width:60%;"></td>
                            <td style="width:40%;border-left:hidden;"><t t-esc="stage['user_id']['name']"/><span style="font-size:11px;">(<t t-esc="stage['name']"/>)</span></td>
                        </tr>
                    </table>
                </t>
            </t>
        </template>


        <template id="report_no_objection_letter_of_embassy">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.partner_id.lang"/>
                    <t t-call="request.report_no_objection_letter_request" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report
            id="action_promotion_increment_letter_request"
            string="No Objection Letter to Embassy "
            model="employee.request"
            report_type="qweb-pdf"
            file="request.report_no_objection_letter_of_embassy"
            name="request.report_no_objection_letter_of_embassy"
            menu="False"
        />

    </data>
</odoo>