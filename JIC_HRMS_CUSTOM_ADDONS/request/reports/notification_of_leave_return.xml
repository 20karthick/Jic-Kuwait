<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_notification_of_leave_return_request">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size:15px;">
                    <h2 class='text-center'><span>Notification of Leave Return</span></h2>
                </div>
                <br/>
                <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">EMPLOYEE DETAILS</td>
                    </tr>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:20%;padding-left:5px;">Employee Name</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.employee_id' /></td>
                        <td style="width:20%;padding-left: 5px;">Employee No.</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.emp_code'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Date of Joining</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.date_of_joining'/></td>
                        <td style="width:20%;padding-left: 5px;">Job Title</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.job_title' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Department</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.department_id'/></td>
                        <td style="width:20%;padding-left: 5px;">Civil ID / Passport ID</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.civil_passport_join' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Company</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.company_id'/></td>
                        <td style="width:20%;padding-left: 5px;">Manager</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.manager_id' /></td>
                    </tr>
                </table>
                <br/>
                <br/>
                 <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">Employee Leave Return Details</td>
                    </tr>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:20%;padding-left:5px;">Date Resumed Work</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.date_resumed_work' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Date of Departure</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.date_of_departure'/></td>
                    </tr>
                     <tr>
                         <td style="width:20%;padding-left: 5px;">Date of Arrival</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.date_of_arrival'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Return status</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.nlr_status' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Days</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.nlr_days'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">If late, Please Explain</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.nlr_if_late' /></td>
                    </tr>
                </table>
                <br/>
                <br/>
                <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">HR Department</td>
                    </tr>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:20%;padding-left:5px;">Return Status</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.hr_nlr_status' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Days</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.hr_days'/></td>
                    </tr>
                     <tr>
                         <td style="width:20%;padding-left: 5px;">Passport Returned</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.hr_passport_returned'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 5px;">Remarks</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:78%;border-left:hidden;"><span t-field='o.hr_remarks'/></td>
                    </tr>
                </table>
                <br/>
                <br/>
                <table style="width:100%;border-top:hidden;border-left:hidden;border-right:hidden;border-bottom:hidden;">
                    <tr>
                        <td style="width:80%; text-align:right;"></td>
                        <td style="width:20%; text-align:center;border-left:hidden; background-color:#ededed;font-weight:bold;">Approved By</td>
                    </tr>
                </table>
                <br/>
                <t t-foreach="o.stage_ids" t-as="stage">
                    <table style="width:100%;text-align:right;border-top:hidden;border-left:hidden;border-right:hidden;border-bottom:hidden;">
                        <tr>
                            <td style="width:60%;"></td>
                            <td style="width:40%;border-left:hidden;"><t t-esc="stage['user_id']['name']"/><span style="font-size:11px;">(<t t-esc="stage['name']"/>)</span></td>
                        </tr>
                    </table>
                </t>
            </t>
        </template>

        <template id="report_notification_of_leave_return">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.partner_id.lang"/>
                    <t t-call="request.report_notification_of_leave_return_request" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report
            id="action_notification_of_leave_return"
            string="Residence Transfer Renewal"
            model="employee.request"
            report_type="qweb-pdf"
            file="request.report_notification_of_leave_return"
            name="request.report_notification_of_leave_return"
            menu="False"
        />

    </data>
</odoo>