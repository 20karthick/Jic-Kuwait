<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_residence_transfer_renewal_request">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size:15px;">
                    <h2 class='text-center'><span>Residence Transfer / Renewal Request</span></h2>
                </div>
                <br/>
                <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">EMPLOYEE DETAILS</td>
                    </tr>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:20%;padding-left:15px;">Employee Name</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.employee_id' /></td>
                        <td style="width:20%;padding-left: 15px;">Employee No.</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.emp_code'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Date of Joining</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.date_of_joining'/></td>
                        <td style="width:20%;padding-left: 15px;">Job Title</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.job_title' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Department</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.department_id'/></td>
                        <td style="width:20%;padding-left: 15px;">Civil ID / Passport ID</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.civil_passport_join' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Company</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.company_id'/></td>
                        <td style="width:20%;padding-left: 15px;">Manager</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.manager_id' /></td>
                    </tr>
                </table>
                <br/>
                <br/>
                 <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">RESIDENCE TRANSFER</td>
                    </tr>
                </table>
                <br/>
                <table style="width:100%;">
                    <div>
                        <td style="width:50%; text-align:center;border-bottom:hidden; background-color:#ededed;font-weight:bold;">FIRST TIME RESIDENCE TRANSFER</td>
                    </div>
                    <div>
                        <td style="width:50%;border-left:hidden; text-align:center;border-bottom:hidden; background-color:#ededed;font-weight:bold;">RESIDENCE TRANSFER</td>
                    </div>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:20%;padding-left:15px;">Probation Completed</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.probation_completed' /></td>
                        <td style="width:20%;padding-left: 15px;">No. of Years</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.no_of_years'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Basic Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.basic_salary'/></td>
                        <td style="width:20%;padding-left: 15px;">Basic Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.basic_salary_renewal' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Work Permit Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.work_permit_salary'/></td>
                        <td style="width:20%;padding-left: 15px;">Work Permit Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.work_permit_salary_renewal' /></td>
                    </tr>
                </table>
                <br/>
                <br/>
                <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">APPROVALS</td>
                    </tr>
                </table>
                <br/>
                <t t-foreach="o.stage_ids" t-as="stage">
                    <table style="width:100%;">
                        <tr>
                            <td style="width:35%;height:35px; text-align:center;margin: auto; background-color:#ededed;">
                                <span><t t-esc="stage['name']"/></span>
                            </td>
                            <td style="width:35%;height:35px;margin: auto; text-align:center;">
                                <span><t t-esc="stage['user_id']['name']"/></span>
                            </td>
                            <td style="width:30%;height:35px;margin: 0 auto; text-align:center;">
                                <span>APPROVED</span>
                            </td>
                        </tr>
                    </table>
                </t>
            </t>
        </template>


        <template id="report_residence_transfer_request">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.partner_id.lang"/>
                    <t t-call="request.report_residence_transfer_renewal_request" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report
            id="action_residence_transfer_renewal_request"
            string="Residence Transfer Renewal"
            model="employee.request"
            report_type="qweb-pdf"
            file="request.report_residence_transfer_request"
            name="request.report_residence_transfer_request"
            menu="False"
        />

    </data>
</odoo>