<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_change_pay_request">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size:15px;">
                    <h2 class='text-center'><span>Change In Pay</span></h2>
                </div>
                <br/>
                <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">EMPLOYEE DETAILS</td>
                    </tr>
                </table>
                <table style="width:100%;">
                    <tr>
                        <td style="width:20%;padding-left:15px;">Employee Name</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.employee_id' /></td>
                        <td style="width:20%;padding-left: 15px;">Employee No.</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.emp_code'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Department</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.department_id'/></td>
                        <td style="width:20%;padding-left: 15px;">Civil ID / Passport ID</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.civil_passport_join' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Company</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.company_id'/></td>
                        <td style="width:20%;padding-left: 15px;">Line Manager</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.manager_id' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Job Title</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.job_title'/></td>
                        <td style="width:20%;padding-left: 15px;">Change in Job Title</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.change_job_title'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Date of Joining</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.date_of_joining'/></td>
                        <td style="width:20%;padding-left: 15px;">Request Date</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.request_date'/></td>
                    </tr>
                </table>
                <br/>
                <br/>
                 <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">Change in Pay Details</td>
                    </tr>
                </table>
                <br/>
                <table style="width:100%;">
                    <div>
                        <td style="width:50%; text-align:center;border-bottom:hidden; background-color:#ededed;font-weight:bold;">Existing</td>
                    </div>
                    <div>
                        <td style="width:50%;border-left:hidden; text-align:center;border-bottom:hidden; background-color:#ededed;font-weight:bold;">Revision</td>
                    </div>
                </table>
                <table style="width:100%;" class="table-striped">
                    <tr>
                        <td style="width:20%;padding-left:15px;">Basic Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.existing_basic_salary' /></td>
                        <td style="width:20%;padding-left: 15px;">Basic Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.revision_basic_salary'/></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Additional Allowance</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.existing_add_allowance'/></td>
                        <td style="width:20%;padding-left: 15px;">Additional Allowance</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.revision_add_allowance' /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding-left: 15px;">Gross Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.existing_gross_salary'/></td>
                        <td style="width:20%;padding-left: 15px;">Gross Salary</td>
                        <td style="width:2%;border-left:hidden;text-align:center;">:</td>
                        <td style="width:28%;border-left:hidden;"><span t-field='o.revision_gross_salary' /></td>
                    </tr>
                </table>
                <br/>
                <tr>
                    <td style="width:30%; text-align:center;font-weight:bold;">Revised Pay Effective Date</td>
                     <td style="width:2%;border-left:hidden;font-weight:bold;text-align:center;">:</td>
                    <td style="width:68%; text-align:left;border-left:hidden;"><span t-field='o.revised_date'/></td>
                </tr>
                <br/>
                <table style="width:100%;" class="table-hover">
                    <tr>
                        <td style="width:20%; text-align:center;font-weight:bold;">Justification / Reasons</td>
                         <td style="width:2%;border-left:hidden;font-weight:bold;text-align:center;">:</td>
                        <td style="width:78%; text-align:left;border-left:hidden;"><span t-field='o.justification'/></td>
                    </tr>
                </table>
                <br/>
                <br/>
                <table style="width:100%;">
                    <tr>
                        <td style="width:100%; text-align:center; background-color:#ededed;font-weight:bold;">APPROVALS</td>
                    </tr>
                </table>
                <br/>
                <t t-foreach="o.approver_ids" t-as="approver">
                    <table style="width:100%;">
                        <tr>
                            <td style="width:35%;height:35px; text-align:center;margin: auto; background-color:#ededed;">
                                <span><t t-esc="approver['from_stage_id']['name']"/></span>
                            </td>
                            <td style="width:35%;height:35px;margin: auto; text-align:center;">
                                <span><t t-esc="approver['user_id']['name']"/></span>
                            </td>
                            <td style="width:30%;height:35px;margin: 0 auto; text-align:center;">
                                <span>APPROVED</span>
                            </td>
                        </tr>
                    </table>
                </t>
            </t>
        </template>


        <template id="report_change_in_pay_request">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.partner_id.lang"/>
                    <t t-call="request.report_change_pay_request" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report
            id="action_report_change_in_pay_request"
            string="Change In Pay"
            model="employee.request"
            report_type="qweb-pdf"
            file="request.report_change_in_pay_request"
            name="request.report_change_in_pay_request"
            menu="False"
        />

    </data>
</odoo>
